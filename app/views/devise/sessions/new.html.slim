header.content_title
  h2= t 'devise.login'

section.content
  = simple_form_for resource, as: resource_name, url: session_path(resource_name), html: { class: :highlight } do |f|
    fieldset
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    section.actions  
      = f.button :submit, t('devise.login'), class: :primary
      == render 'devise/shared/links'
